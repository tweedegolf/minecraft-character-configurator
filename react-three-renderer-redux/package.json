{
  "name": "minecraft-character-configurator",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^5.0.0",
    "babel-plugin-syntax-decorators": "^6.5.0",
    "babel-plugin-transform-class-properties": "^6.1.20",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": ">=12.0.0",
    "eslint": "^2.3.0",
    "eslint-plugin-react": "^4.2.1",
    "exorcist": ">=0.4.0",
    "install": "^0.5.6",
    "local-web-server": "^1.2.1",
    "uglify": "^0.1.5",
    "watchify": ">=3.6.0"
  },
  "engines": {
    "node": "0.10.x"
  },
  "dependencies": {
    "babel-polyfill": "^6.7.2",
    "flux": "^2.1.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.1.2",
    "react-three-renderer": "^0.1.2",
    "redux": "^3.1.2",
    "three": "^0.74.0"
  },
  "scripts": {
    "start": "ws --port 8001",
    "watch": "watchify lib/* js/app.js -t [babelify --presets [ es2015 react ] --plugins [ transform-class-properties syntax-decorators ] ] -o build/app.js --debug --verbose",
    "build": "browserify js/app.js -t [ babelify --presets [ es2015 react ]  --plugins [ transform-class-properties syntax-decorators ] ] --debug | exorcist build/app.js.map | uglifyjs -c > build/app.js"
  }
